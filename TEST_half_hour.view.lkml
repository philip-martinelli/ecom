view: test_half_hour {

  derived_table: {
    sql: SELECT
        user_id as user_id
      FROM orders
      GROUP BY user_id
      ;;
    sql_trigger_value: select floor((extract(epoch from getdate()) - 30*60) / (2*60*60));;
  }

  # Define your dimensions and measures here, like this:
  dimension: user_id {
    description: "Unique ID for each user that has ordered"
    type: number
    sql: ${TABLE}.user_id ;;
  }
}
